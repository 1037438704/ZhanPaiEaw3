<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_marginLeft="32px"
            android:src="@mipmap/home_icon_back" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="578px"
            android:layout_height="96px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实验室仪器"
                android:textColor="#333333"
                android:textSize="32px"
                android:textStyle="bold" />
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/img_search_category"
            android:layout_width="38px"
            android:layout_height="38px"
            android:src="@mipmap/product_icon_search" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#999999" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listview_category"
            android:layout_width="220px"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:scrollbars="none" />

        <zpe.jiakeyi.com.zhanpaieaw.view.MainViewPager
            android:id="@+id/viewpager_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"></zpe.jiakeyi.com.zhanpaieaw.view.MainViewPager>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
