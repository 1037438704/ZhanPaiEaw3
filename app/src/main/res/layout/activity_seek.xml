<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_img_seek"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_marginLeft="34px"
            android:src="@mipmap/home_icon_back" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="500px"
            android:layout_height="64px"
            android:layout_marginLeft="46px"
            android:background="@drawable/shape_corner_seek"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="26px"
                android:layout_height="26px"
                android:layout_gravity="center"
                android:layout_marginLeft="24px"
                android:src="@mipmap/icon_11" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24px"
                android:background="@null"
                android:hint="输入关键字"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:text="搜索"
            android:textColor="#333333"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f7f7f7" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="682px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:text="热搜"
            android:textColor="#333333"
            android:textSize="28px"
            android:textStyle="bold" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="682px"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:fitsSystemWindows="true"

        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/flexbox_layout_hot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24px"
            app:alignContent="flex_start"
            app:alignItems="center"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:showDivider="beginning|middle"></com.google.android.flexbox.FlexboxLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="682px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:text="历史搜索"
            android:textColor="#333333"
            android:textSize="28px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_delete_seek"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_marginLeft="535px"
            android:layout_marginTop="36px"
            android:src="@mipmap/home_icon_del" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="682px"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/flexbox_layout_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24px"
            app:alignContent="flex_start"
            app:alignItems="center"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:showDivider="beginning|middle"></com.google.android.flexbox.FlexboxLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
