<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.buy.ReleaseForAty">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_aty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginTop="32px"
            android:src="@mipmap/home_icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发布求购"
            android:textColor="@color/black"
            android:textSize="32px"
            android:textStyle="bold" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawablePadding="8dp"
            android:hint="输入标题"
            android:lines="1"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/seekColorText"
            android:textSize="32px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="465px"
            android:background="@color/white"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/layout_et"
                android:layout_width="match_parent"
                android:layout_height="211px">

                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:layout_marginTop="1dp"
                    android:background="@null"
                    android:drawablePadding="8dp"
                    android:hint="输入内容..."
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/seekColorText"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Image_1"
                    android:layout_width="144px"
                    android:layout_height="144px"
                    android:layout_marginLeft="24px"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/Image_2"
                    android:layout_width="144px"
                    android:layout_height="144px"
                    android:layout_marginLeft="10px"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/Image_3"
                    android:layout_width="144px"
                    android:layout_height="144px"
                    android:layout_marginLeft="10px"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/Image_5"
                    android:layout_width="144px"
                    android:layout_height="144px"
                    android:layout_marginLeft="10px"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/Image_4"
                    android:layout_width="144px"
                    android:layout_height="144px"
                    android:layout_marginLeft="24px"
                    android:src="@mipmap/icon_add_0" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/auto_tv_ch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:drawableLeft="@mipmap/buy_icon_location"
                    android:padding="12dp"
                    android:text="请选择城市"
                    android:textColor="#999999"
                    android:textSize="24px" />

            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/release_rl_classify"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:text="分类"
                android:textColor="#333333"
                android:textSize="28px" />

            <TextView
                android:id="@+id/fenlei_tv"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="请选择分类"
                android:textColor="#333333"
                android:textSize="28px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24px"
                android:layout_marginTop="32px"
                android:src="@mipmap/buy_icon_open" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="手机"
                android:textSize="28px" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:hint="输入手机号"
                android:lines="1"
                android:maxLength="11"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/seekColorText"
                android:textSize="28px"

                />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="left|center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="QQ "
                android:textSize="28px" />

            <EditText
                android:id="@+id/et_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:hint="输入QQ号"
                android:lines="1"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/seekColorText"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="left|center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="微信"
                android:textSize="28px" />

            <EditText
                android:id="@+id/et_weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:hint="输入微信"
                android:lines="1"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/seekColorText"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/rf_tv_fabu"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_margin="10dp"
            android:layout_marginTop="28px"
            android:background="@drawable/shape_bottom"
            android:gravity="center"
            android:text="发   布"
            android:textColor="@color/white"
            android:textSize="34px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
