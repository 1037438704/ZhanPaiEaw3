<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="zpe.jiakeyi.com.zhanpaieaw.activity.my.BuyBuyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/back_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:layout_marginTop="34px"
            android:src="@mipmap/home_icon_back" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_xiaoxi1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:tabIndicatorColor="#0077ff"
            app:tabPaddingBottom="-1px"
            app:tabPaddingEnd="-1px"
            app:tabPaddingStart="-1px"
            app:tabPaddingTop="-1px"
            app:tabSelectedTextColor="#333333"

            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="#333333"
            tools:ignore="MissingPrefix" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EDEDED" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.zhy.autolayout.AutoLinearLayout>
