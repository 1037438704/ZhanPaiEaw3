<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zpe.jiakeyi.com.zhanpaieaw.activity.login.RegisterActivity2">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/white"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_return"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="32px"
            android:layout_marginTop="32px"
            android:src="@mipmap/home_icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="260px"
            android:gravity="center"
            android:text="注册"
            android:textColor="#333333"
            android:textSize="32px"
            android:textStyle="bold" />
    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/bg_view_1" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="220px"
                android:layout_height="50px"
                android:src="@mipmap/login_icon_logo" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/register_phone_number"
                android:layout_width="600px"
                android:layout_height="100px"
                android:background="@null"
                android:drawablePadding="8dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="11"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/seekColorText"
                android:textSize="28px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="600px"
            android:layout_height="1px"
            android:background="#f2f2f2" />

        <TextView
            android:layout_width="600px"
            android:layout_height="1px"
            android:background="#f2f2f2" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="600px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@null"
                    android:drawablePadding="8dp"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="11"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/seekColorText"
                    android:textSize="28px" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="600px"
            android:layout_height="1px"
            android:background="#f2f2f2" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="600px"
            android:layout_height="100px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="密码由6-16个字符组成,区分大小写"
                android:textColor="#999999"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/register_button"
            android:layout_width="600px"
            android:layout_height="88px"
            android:layout_marginTop="20px"
            android:background="@drawable/shape_bottom"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:layout_marginTop="60px"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册即代表您已同意"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/zhuce_xy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《用户注册协议》"
                    android:textColor="@color/bule" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
