<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/seek_title_layout"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_img_seek"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_marginLeft="34px"
            android:src="@mipmap/home_icon_back" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/seek_title"
            android:layout_width="500px"
            android:layout_height="64px"
            android:layout_marginLeft="46px"
            android:background="@drawable/shape_corner_seek"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="26px"
                android:layout_height="26px"
                android:layout_gravity="center"
                android:layout_marginLeft="24px"
                android:src="@mipmap/icon_11" />

            <TextView
                android:id="@+id/seek_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:text="输入关键字"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:src="@mipmap/product_icon_search" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>