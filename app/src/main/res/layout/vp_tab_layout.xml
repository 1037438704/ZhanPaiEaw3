<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_news"
        android:layout_width="match_parent"
        android:layout_height="90px"
        app:tabIndicatorColor="#0077ff"
        app:tabPaddingBottom="-1px"
        app:tabPaddingEnd="-1px"
        app:tabPaddingStart="-1px"
        app:tabPaddingTop="-1px"
        app:tabSelectedTextColor="#0077ff"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="#333333"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpa_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</com.zhy.autolayout.AutoLinearLayout>